{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "client/**/*.ts", "server/**/*.ts", "index.ts", "test-setup.ts"],
  "exclude": [
    "jest.config.ts",
    "test-setup.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "client/**/*.spec.ts",
    "client/**/*.test.ts",
    "server/**/*.spec.ts",
    "server/**/*.test.ts"
  ]
}
