{
  "extends": ["../../.eslintrc.json", "@hendaz/eslint-config/basic"],
  "ignorePatterns": ["!**/*", "convex/_generated/**/*", "jest.config.ts", "tsconfig.json"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["libs/backend/tsconfig.json", "libs/backend/tsconfig.*?.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
